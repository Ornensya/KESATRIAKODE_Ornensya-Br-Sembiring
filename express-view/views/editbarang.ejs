<%- include('partials/header') %>
<div class="container mt-5">
    <div class="row"></div>
    <div class="col-lg-12">

        <%- include('partials/alert/error') %>
        
    <h1>Edit Barang</h1>
    <form action="/barang/edit/<%= item.id %>" method="POST">
        <label for="nama">Nama:</label>
        <input type="text" id="nama" class="form-control" name="nama" value="<%= item.nama %>">
    
        <label for="harga">Harga:</label>
        <input type="number" id="harga" class="form-control" name="harga" value="<%= item.harga %>">
    
        <label for="stok">Stok:</label>
        <input type="number" id="stok" class="form-control" name="stok" value="<%= item.stok %>">
    
        <button type="submit" class="btn btn-primary mt-5">Edit</button>
    </form>

    <%- include('partials/footer') %>
